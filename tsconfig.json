{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "jsx": "react",
      "module": "commonjs",
	  "noImplicitAny": true,
	  "suppressImplicitAnyIndexErrors": true,
      "outDir": "./build/",
      "preserveConstEnums": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "es6"
    },
    "include": [
      "./src/**/**/*"
    ]
}
